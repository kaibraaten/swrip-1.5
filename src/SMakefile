all:		$(SWRIP)

.cpp.o:
		$(CC) $(CFLAGS) $<

.c.o:
		$(CC) $(CFLAGS) $<

$(SWRIP):	$(OBJS)
		$(CC) ProgramName=$@ $(LDFLAGS) $(OBJS)

clean:
		$(RM) $(SWRIP) $(OBJS)

