LIBRARIAN = oml
RM = delete quiet force
OBJ = affect.o affectchar.o areaattack.o attack.o blacklightning.o blindness.o causecritical.o causelight.o causeserious.o charmperson.o createmob.o createobj.o cureblindness.o curepoison.o detectpoison.o dispelevil.o dispelmagic.o dream.o earthquake.o energydrain.o farsight.o fireball.o flamestrike.o handofchaos.o harm.o identify.o invis.o knowalignment.o lightningbolt.o objinv.o poison.o possess.o removeinvis.o removetrap.o scorchingsurge.o shockinggrasp.o sleep.o smaug.o ventriloquate.o weaken.o

LIBNAME = spells.lib

all:		$(LIBNAME)

.cpp.o:
		$(CC) $*.cpp

.c.o:
		$(CC) $*.c

$(LIBNAME):	$(OBJ)
		$(LIBRARIAN) $@ r $(OBJ)

clean:
		$(RM) \#?.o $(LIBNAME) \#?~
